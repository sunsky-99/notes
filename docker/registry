docker pull httpd:2.4.57-alpine3.18

// win 新建 auth/htpasswd 目录文件
docker run --rm --entrypoint htpasswd httpd:2.4.57-alpine3.18 -Bbn testuser testpassword | Set-Content -Encoding ASCII auth/htpasswd

// 创建 auth 目录
mkdir auth
// 创建一个包含用户一项的密码文件sunsky，密码为 22333.sunsky@topPWD5000
docker run \
--entrypoint htpasswd \
httpd:2.4.57-alpine3.18 -Bbn sunsky 22333.sunsky@topPWD5000 > auth/htpasswd